def apply_visual_mask(image, debug=False):
    table_bbox = _detect_table_vertical_region(image)

    # FALLBACK INSTITUCIONAL:
    # Se não detectar tabela, mas for TR,
    # aplica máscara SOMENTE na metade inferior da página
    if table_bbox is None:
        height = image.size[1]
        y_start = int(height * 0.25)
        y_end = int(height * 0.85)
    else:
        y_start, y_end = table_bbox
